#include <bits/stdc++.h>
#include <iostream>
using namespace std;
int mx(int a, int b){
    if (a>b){
        return a;
    }
    return b;
}
int main() {
    int n;
    cin >> n;
    vector<char> attendance(n);
    for (int i = 0; i < n; i++) {
        cin >> attendance[i];
    }
    unordered_map<int, int> m;
    int sum = 0;
    int max = 0;
    m[0] = -1;
    for (int i = 0; i < n; i++) {
        if (attendance[i] == 'P')
            sum += 1;
        else if (attendance[i] == 'A')
            sum -= 1;
        if (m.find(sum) != m.end()) {
            max = mx(max, i - m[sum]);
        } 
        else {
            m[sum] = i;
        }
    }
    cout << max << endl;
    return 0;
}
